<h1>Usuarios</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Administrador?</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <% if user.admin? %>
          <td><%= link_to 'Eliminar admin', pages_deladmin_path(user_id: user.id), method: :post, class: 'btn btn-sm btn-warning' %></td>
        <% else %>
          <td><%= link_to 'Asignar admin', pages_asignadmin_path(user_id: user.id), method: :post, class: 'btn btn-sm btn-success' %></td>
        <% end %>
        <td>

            <%= link_to 'Eliminar Usuario', pages_deluser_path(user_id: user.id), method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar este usuario?' }, class: 'btn btn-sm btn-danger' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

